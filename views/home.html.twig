{% extends 'layout.html.twig' %}

{% block page_title %}Filer{% endblock %}

{% block content %}
<h1>
  Welcome {{ username }}
  </h1>
  <br>
  {% set foo =  0 %}
  {% for file in files %}
        <a download={{file}} href={{paths[foo]}}> <img  alt="File" src="https://png.icons8.com/metro/1600/file.png" width="20" height="20"> {{file}} 
</a>
        <a href='?action=home&deletefile={{file}}&path={{path}}'>
          <img alt="Delete" src="https://image.flaticon.com/icons/svg/63/63260.svg" width="22"></a>
        <a href='?action=rename&name={{file}}&path={{path}}'>
          <img alt="Rename" src="./assets/img/modify.png" width="20"></a>
          
        <a href='?action=move&path={{path}}&name={{file}}'> <img  width="22px" src="./assets/img/moveOne.png"></a>
        {% if valid[foo] == "valid" or valid[foo]== "text" %}
        <a href='?action=see&path={{path}}&name={{file}}'><img  width="22px" src="./assets/img/viewFile.png"></a>  
        {% endif %}
        {% if valid[foo] == "text" %}
        <a href='?action=write&path={{path}}&name={{file}}'><img  width="22px" src="./assets/img/write.png"></a>
        {% endif %}
        <br><br>
        {% set foo = foo + 1 %}
  {% endfor %}
  
    {% for folder in folders %}
    
      <a href='?action=home&path={{path}}{{folder}}'> <img alt="Folder" src="http://iconshow.me/media/images/ui/ios7-icons/png/512/folder-outline.png" width="25"></a>
{{folder}}</a>
      <a href='?action=home&path={{path}}&deletefile={{folder}}'> <img alt="Delete" src="https://image.flaticon.com/icons/svg/63/63260.svg" width="22"></a>
      <a href='?action=rename&path={{path}}&name={{folder}}'> <img alt="Modify" src="./assets/img/modify.png" width="20"></a>
      <a href='?action=move&path={{path}}&name={{folder}}'> <img  width="22px" src="./assets/img/moveOne.png">
        <br><br>

  {% endfor %}

  <footer>
    <small>By Nicolas Tran & Karla Og</small>
  </footer>   
{% endblock %}
